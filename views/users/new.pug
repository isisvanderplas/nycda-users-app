extends ../application.pug

block content
	.container
		.row
			.col-xs-6.offset-xs-3
				h1 Add a new user
				hr
				form(action="/users" method="POST" class="form-control")
					.form-group
						label First Name:
						input(type="text" name="firstname" placeholder="First Name" class="form-control")
					.form-group
						label Last Name:
						input(type="text" name="lastname" placeholder="Last Name" class="form-control")
					.form-group
						label Email Adress:
						input(type="email" name="email" placeholder="yourmail@e-mail.com" class="form-control")
					.form-group
						button(type="submit" class="btn btn-success btn-lg btn-block") Submit!
